<%- include('partials/header') -%>
<div class="container">
<nav class="navbar navbar-expand-lg extend" style="background:#333333" >
<form action="">
  <div>
    <input type="text" name="search" id="myInput" placeholder="Search for posters.." title="Type in a poster name" class="search">
  <input type="submit" name="searchButton" value="search" class="searchButton">
  </div>
  <% if(search){ %>
  <input type="submit" name="searchButton" value="clear search">
  <%} %>
</form>
        
      <ul row justify-content-center mt-5>
        <a href="/products"><li>🖼️ Products</li></a>
        <% if(cartSize > 0){ %>
        <a href="/cart"><li>🛒 Cart(<%= cartSize %>)</li></a>
        <%} %>
        <a href="/profile"><li>🚧 Main Page</li></a>
  
    </ul>

    <!-- <button class="fa fa-toggle-on btn btn-primary" onclick="modeFunction()"></button> -->
</nav>

<div class="imageDisplay">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/imgs/earthy.webp" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/imgs/spaceship.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="/imgs/green.webp" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

  <div class="container featureDisplay">
  <div class="row feature">
    <h2>Featured Products</h2>
      <ul class="messages">
        <% for(var i=0; i< products.length; i++) {
          if(products[i].featured){ %>
            <li class="message">
        <form action="/post/addToCart" method="post">
                <img src="/imgs/<%= products[i].image %>" alt="">
                <span><%= products[i].title %></span> 
                <span>$<%= products[i].price %></span>
              <input type="submit" class="addToCart btn btn-dark" name="submit" value="Add To Cart"></input>
              <input type="hidden" name="title" value="<%= products[i].title %>">
              <input type="hidden" name="price" value="<%= products[i].price %>">
              <input type="hidden" name="img" value="<%= products[i].image %>">
              <input type="hidden" name="productId" value="<%= products[i]._id %>">

             </li>
          </form>
            <% }} %>
      
    </div>
  </div>
  
  </div>
 
  <script src="mode.js"></script>
<%- include('partials/footer') -%>